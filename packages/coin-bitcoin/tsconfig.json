{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    // Allows javascript files to be compiled
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": [
      "@types/jest"
    ],
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "**/node_modules"
  ]
}

